{
  "name": "aws-k6-localstack",
  "version": "1.0.0",
  "description": "Node.js AWS Lambda + S3 simulation on LocalStack with K6 tests",
  "main": "lambda/index.js",
  "scripts": {
    "_lint": "eslint .",
    "start": "node api-gateway-sim.js",
    "deploy": "npm run deploy:localstack && npm run deploy:workflow",
    "deploy:localstack": "node scripts/deploy-localstack.js",
    "deploy:workflow": "node scripts/deploy-workflow.js",
    "test": "./run-complete-tests.sh",
    "test:verify": "./verify-setup.sh",
    "test:post": "./scripts/run-k6-tests.sh k6/post-test.js",
    "test:get": "./scripts/run-k6-tests.sh k6/get-test.js",
    "test:stepfn": "./scripts/run-k6-tests.sh k6/stepfn-test.js",
    "test:all": "npm run test:post && npm run test:get && npm run test:stepfn",
    "test:unit": "jest",
    "test:unit:lambda1": "jest tests/unit/lambda1",
    "test:unit:lambda2": "jest tests/unit/lambda2",
    "test:unit:lambda3": "jest tests/unit/lambda3",
    "test:unit:coverage": "jest --coverage",
    "validate": "node scripts/pre-test-validation.js",
    "analyze": "node scripts/test-analyzer.js",
    "analyze:enhanced": "node scripts/enhanced-analyzer.js",
    "analyze:watch": "node scripts/enhanced-analyzer.js watch reports",
    "report": "node scripts/generate-report.js",
    "report:consolidated": "node scripts/generate-consolidated-report.js",
    "clean": "node scripts/cleanup-workflow.js && docker compose down",
    "setup": "docker compose up -d && npm run deploy",
    "verify:localstack": "node scripts/verify-localstack.js",
    "debug": "DEBUG=* node api-gateway-sim.js",
    "reset": "npm run clean && npm run setup && npm run verify:localstack",
    "fix": "node scripts/fix-test-issues.js",
    "wait:localstack": "./scripts/wait-for-services.sh --host=localhost --port=4566 --service=LocalStack --timeout=60",
    "wait:api": "./scripts/wait-for-services.sh --host=localhost --port=3000 --service=APIGateway --timeout=30",
    "test:robust": "npm run wait:localstack && npm run deploy && npm run wait:api && npm run test:all"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.826.0",
    "@aws-sdk/client-lambda": "^3.826.0",
    "@aws-sdk/client-s3": "^3.830.0",
    "@aws-sdk/client-sfn": "^3.830.0",
    "aws-sdk": "^2.1564.0",
    "body-parser": "^1.20.3",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "lru-cache": "^11.1.0",
    "minimist": "^1.2.8",
    "multer": "^2.0.1"
  },
  "devDependencies": {
    "aws-sdk-mock": "^6.2.1",
    "eslint": "^9.29.0",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^30.0.2",
    "k6-html-reporter": "^1.0.5"
  }
}
